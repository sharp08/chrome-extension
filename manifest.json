{
  "manifest_version": 3,
  "name": "B站视频速度扩展",
  "version": "0.0.1",
  "description": "B站视频速度扩展",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/*"
      ],
      "js": [
        "js/content-script.js" 
      ]
    }
  ],
  "icons": {
    "48": "imgs/james.png"
  },
  "action": {
    "default_icon": {
      "16": "imgs/james.png",
      "24": "imgs/james.png",
      "32": "imgs/james.png"
    },
    "default_title": "中国人不卷中国人"
  }
}